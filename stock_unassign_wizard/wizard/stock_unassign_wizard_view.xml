<odoo>
<data>

<record id="view_stock_unassign_wizard" model="ir.ui.view">
    <field name="name">stock.unassign.wizard</field>
    <field name="model">stock.unassign.wizard</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <div>
                    <label string="Lines to unassign" for="line_ids"/>
	                <field name="line_ids" colspan="4" readonly="1">
	                    <tree>
	                        <field name="product_id" />
	                        <field name="partner_id" />
	                        <field name="picking_id" />
	                        <field name="raw_material_production_id" />
	                        <field name="reserved_availability" />
	                        <button name="unassign_line" type="object" icon="fa-undo"/>
	                    </tree>
	                </field>
                </div>
            </group>
            <footer>
                <button special="cancel" class="btn btn-secondary" string="Close" />
            </footer>
        </form>
    </field>
</record>

</data>
</odoo>
