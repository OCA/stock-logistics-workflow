<odoo>
<data>

    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="name">mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_raw_ids']/tree" position="inside">
                <button name="open_unassign_wizard" type="object" icon="fa-pencil-square-o"
                    string="Stock Unassign"
                    attrs="{'invisible':[('state','not in',('confirmed','partially_available','cancel'))]}"/>
            </xpath>
        </field>
    </record>

</data>
</odoo>
