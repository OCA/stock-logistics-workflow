<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- stock.picking -->
        <record id="view_picking_form" model="ir.ui.view">
            <field name="name">stock_picking_invoice_link.stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='General Informations']" position="after">
                    <group string="Invoices" colspan="4" groups="account.group_account_invoice"
                           attrs="{'invisible': [('invoice_state', '=', 'none')]}">
                        <field name="invoice_ids" nolabel="1"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- stock.move -->
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">stock_picking_invoice_link.stock.move.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='main_grp']" position="after">
                    <group string="Invoices" colspan="4" groups="account.group_account_invoice">
                        <field name="invoice_line_ids" nolabel="1"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="view_move_picking_form" model="ir.ui.view">
            <field name="name">stock_picking_invoice_link.stock.move.picking.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
            <field name="arch" type="xml">
               <xpath expr="//group[@string='Locations']" position="before">
                    <group string="Invoices" colspan="4" groups="account.group_account_invoice">
                        <field name="invoice_line_ids" nolabel="1"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
