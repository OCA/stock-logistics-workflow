<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
            name="name"
        >res_config_settings_view_form - stock_picking_backorder_link</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div name="operations_setting_container" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="stock_picking_backorder_link" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="stock_picking_backorder_link" />
                        <div class="text-muted">
                            If enabled, when all the quants prepared for the adjustment are done, the adjustment is automatically set to done.
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
