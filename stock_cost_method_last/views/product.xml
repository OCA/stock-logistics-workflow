<odoo>
    <record id="view_template_property_form" model="ir.ui.view">
        <field name="name">cost_method_last.product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock_account.view_template_property_form" />
        <field name="arch" type="xml">
            <field name="standard_price" position="attributes">
                <attribute
                    name="attrs"
                >{'readonly': ['&amp;', ('valuation','=','real_time'), ('cost_method', 'in', ['standard', 'average', 'last'])]}</attribute>
            </field>
            <button
                name="%(stock_account.action_view_change_standard_price)d"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'invisible': ['|', '|', ('valuation','!=', 'real_time'), ('cost_method', 'not in', ['average', 'last']), ('product_variant_count', '>', 1)]}</attribute>
                <attribute name="string">Force Cost Update</attribute>
            </button>
        </field>
    </record>
    <record id="product_variant_easy_edit_view_inherit" model="ir.ui.view">
        <field name="name">cost_method_last.product.product.form</field>
        <field name="model">product.product</field>
        <field
            name="inherit_id"
            ref="stock_account.product_variant_easy_edit_view_inherit"
        />
        <field name="arch" type="xml">
            <button
                name="%(stock_account.action_view_change_standard_price)d"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'invisible': ['|',('valuation','!=', 'real_time'), ('cost_method', 'not in', ['average', 'last'])]}</attribute>
                <attribute name="string">Force Cost Update</attribute>
            </button>
        </field>
    </record>
</odoo>
