<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--Add lending to stock picking form view -->
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.lending.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <field name="origin" position="after">
              <field name="has_return_date" invisible="1" />
              <field
                    name="return_picking_date"
                    attrs="{'invisible':[('has_return_date','=',False)],'required':[('has_return_date','=',True)]}"
                />
              <field name="linked_to" attrs="{'invisible':[('linked_to','=',False)]}" />
            </field>
        </field>
    </record>

</odoo>
