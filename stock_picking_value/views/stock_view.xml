<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_picking_form_value">
            <field name="name">stock.picking.value</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="move_lines" position="after">
                    <group colspan="4" col="7">
                        <field name="amount_untaxed" sum="Untaxed amount"/>
                        <field name="amount_tax"/>
                        <field name="amount_total" sum="Total amount"/>
                    </group>
                </field>
            </field>
        </record>
        
        <record id="view_move_picking_form_value" model="ir.ui.view">
            <field name="name">stock.move.form.value</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Locations']" position="before">
                    <group>
                        <field name="sale_price_unit"/>
                        <field name="sale_discount"/>
                    </group>
                    <group>
                        <field name="sale_price_untaxed"/>
                        <field name="sale_taxes"/>
                        <field name="sale_subtotal"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
