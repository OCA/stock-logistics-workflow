<odoo>
    <record id="view_delivery_carrier_form" model="ir.ui.view">
        <field name="name">delivery.carrier.form.inherit</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
        <field name="arch" type="xml">
            <field name="integration_level" position="after">
                <field
                    name="send_delivery_notice_on"
                    widget="radio"
                    attrs="{'invisible': [('integration_level', '!=', 'rate_and_ship')]}"
                />
                <field
                    name="send_delivery_notice_picking_type_ids"
                    nolabel="1"
                    colspan="2"
                    attrs="{
            'invisible': [('send_delivery_notice_on', '=', 'ship')],
            'required': [('send_delivery_notice_on', '=', 'custom')]
          }"
                />
            </field>
        </field>
    </record>
</odoo>
