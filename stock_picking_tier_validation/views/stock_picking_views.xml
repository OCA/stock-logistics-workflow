<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="tier_view_picking_form" model="ir.ui.view">
        <field name="name">tier.stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <button name="action_confirm" position="before">
                <button
                    name="request_validation"
                    string="Request Validation"
                    attrs="{'invisible': ['|','|',('need_validation', '!=', True),('rejected','=',True),('state','in',['done'])]}"
                    type="object"
                />
                <button
                    name="restart_validation"
                    string="Restart Validation"
                    attrs="{'invisible': ['|',('review_ids', '=', []),('state','in',['done'])]}"
                    type="object"
                />
            </button>
            <header position="after">
                <field name="need_validation" invisible="1" />
                <field name="validated" invisible="1" />
                <field name="rejected" invisible="1" />
                <div
                    class="alert alert-warning"
                    role="alert"
                    attrs="{'invisible': ['|', '|', '|',
                     ('validated', '=', True), ('state', 'in', ['done']),
                     ('rejected', '=', True), ('review_ids', '=', [])]}"
                    style="margin-bottom:0px;"
                >
                    <p><i class="fa fa-info-circle" />This picking needs to be
                        validated.
                        <field name="can_review" invisible="1" />
                        <button
                            name="validate_tier"
                            string="Validate"
                            attrs="{'invisible': [('can_review', '=', False)]}"
                            type="object"
                            class="oe_inline oe_button btn-success"
                            icon="fa-thumbs-up"
                        />
                        <button
                            name="reject_tier"
                            string="Reject"
                            attrs="{'invisible': [('can_review', '=', False)]}"
                            type="object"
                            class="btn-icon btn-danger"
                            icon="fa-thumbs-down"
                        />
                    </p>
                </div>
                <div
                    class="alert alert-success"
                    role="alert"
                    attrs="{'invisible': ['|', '|', ('validated', '!=', True), ('state', 'in', ['done']), ('review_ids', '=', [])]}"
                    style="margin-bottom:0px;"
                >
                    <p><i class="fa fa-thumbs-up" /> Operation has been <b
                        >validated</b>!</p>
                </div>
                <div
                    class="alert alert-danger"
                    role="alert"
                    attrs="{'invisible': ['|', '|', ('rejected', '!=', True), ('state', 'in', ['done']), ('review_ids', '=', [])]}"
                    style="margin-bottom:0px;"
                >
                    <p><i class="fa fa-thumbs-down" /> Operation has been <b
                        >rejected</b>.</p>
                </div>
            </header>
            <button name="action_confirm" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': ['|','|','|',('show_mark_as_todo', '=', False),('rejected','=',True),('need_validation', '=', True),'&amp;',('validated', '!=', True),('review_ids', '!=', [])]}</attribute>
            </button>
            <xpath expr="//form/div[hasclass('oe_chatter')]" position="before">
                <field
                    name="review_ids"
                    widget="tier_validation"
                    attrs="{'invisible':[('review_ids', '=', [])]}"
                />
            </xpath>
        </field>
    </record>
    <record id="tier_view_picking_internal_search" model="ir.ui.view">
        <field name="name">stock.picking.internal.search.tier</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search" />
        <field name="arch" type="xml">
            <filter name="activities_my" position="before">
                <filter
                    name="needs_review"
                    string="Needs my Review"
                    domain="[('reviewer_ids','in',uid), ('state', 'not in', ['done'])]"
                    help="My Picking to review"
                />
                <filter
                    name="tier_validated"
                    string="Validated"
                    domain="[('validated', '=', True)]"
                    help="Pickings validated and ready to be confirmed"
                />
            </filter>
        </field>
    </record>
</odoo>
