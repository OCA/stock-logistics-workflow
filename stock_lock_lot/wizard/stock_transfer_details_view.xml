<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_stock_enter_transfer_details_inh_locklot" model="ir.ui.view">
            <field name="name">view.stock.enter.transfer.details.inh.locklot</field>
            <field name="model">stock.transfer_details</field>
            <field name="inherit_id" ref="stock.view_stock_enter_transfer_details"/>
            <field name="arch" type="xml">
                 <field name="lot_id" position="before">
                    <field name="allow_locked" invisible="1"/>
                 </field>
                 <field name="lot_id" position="attributes">
                    <attribute name="domain">[('product_id','=?',product_id), '|', ('locked', '=', allow_locked), ('locked','=',False)]</attribute>
                 </field>
            </field>
        </record>
    </data>
</openerp>
