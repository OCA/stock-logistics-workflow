<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="picking_link_wizard_view_form" model="ir.ui.view">
        <field name="name">picking.link.wizard.form</field>
        <field name="model">picking.link.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate picking Link">
                <group>
                    <group>
                        <field name="picking_id" invisible="1" />
                    </group>
                </group>
                <group>
                    <field name="link" readonly="1" widget="CopyClipboardChar" />
                </group>
                <footer>
                    <button
                        string="Close"
                        class="btn-primary"
                        special="cancel"
                        data-hotkey="z"
                    />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_stock_picking_generate_link" model="ir.actions.act_window">
        <field name="name">Generate signature link</field>
        <field name="res_model">picking.link.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="picking_link_wizard_view_form" />
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_stock_picking" />
        <field name="binding_view_types">form</field>
    </record>
</odoo>
