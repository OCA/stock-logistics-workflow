<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  
  <record id="stock_move_view_tree" model="ir.ui.view">
    <field name="name">stock.move.view.tree</field>
    <field name="model">stock.move</field>
    <field name="arch" type="xml">
      <tree>
        <field name="picking_id" />
        <field name="partner_id" string="Partner"/>
        <field name="date" />
        <field name="date_deadline"/>
        <field name="forecast_availability" string="reserved"/>
        <field name="state"/>
        <field name="picking_state"/>
      </tree>
    </field>
  </record>

  <record id="stock_move_force_reservation_form" model="ir.ui.view">
    <field name="name">stock.move.force.reservation.form</field>
    <field name="model">stock.move.force.reservation</field>
    <field name="arch" type="xml">
      <form string="Force reservation">
        <sheet>
          <group>
            <field name="move_id" force_save="1" />
            <field name="product_id" force_save="1" />
            <field name="picking_id" force_save="1"/>
          </group>
          <group>
            <field name="move_to_unreserve_ids" context="{'tree_view_ref':'stock_move_force_reservation.stock_move_view_tree'}" nolabel="1" />
          </group>
          <group>
            <field name="total_quantity"/>
          </group>
        </sheet> 
        <footer>
          <button name="validate" type="object" string="Validate" class="btn-primary" />
          <button special="cancel" string="Cancel" class="btn-default" />
        </footer>
      </form>
    </field>
  </record>

  <record id="stock_move_force_reservation_action" model="ir.actions.act_window">
    <field name="name">Force reservation</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">stock.move.force.reservation</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

</odoo>
