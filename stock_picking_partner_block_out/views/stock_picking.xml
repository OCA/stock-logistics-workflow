<odoo>

    <record model="ir.ui.view" id="stock_picking_form_view">
        <field
            name="name"
        >stock.picking.form (in stock_picking_partner_block_out)</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']">
                <div name="alert_picking_blocked">

                    <field name="partner_picking_block_out" invisible="1" />
                    <div
                        role="alert"
                        class="alert alert-warning mb-2 text-center"
                        attrs="{'invisible': [('partner_picking_block_out', '=', False)]}"
                    >
                        <span>Cannot be validated because deliveries to <field
                                name="partner_id"
                                readonly="1"
                            /> are blocked</span>
                    </div>
                </div>

            </xpath>
        </field>
    </record>


</odoo>
