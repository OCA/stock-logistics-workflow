<odoo>
    <record id="stock_picking_view_form_inherit_backdating" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[last()]" position="after">
                <button string="Fill Actual Movement Date" type="action"
                    name="%(action_view_fill_backdating)d"
                    attrs="{
                        'invisible':[
                            ('state', 'not in', (
                                    'assigned',
                                    'partially_available',
                                ),
                            ),
                        ],
                    }"
                    class="oe_highlight"
                    help="Fill Actual Movement Date of all operations"/>
            </xpath>
            <xpath expr="//field[@name='move_line_ids_without_package']//field[@name='product_id']" position="after">
                <field name="date_backdating"/>
            </xpath>
            <field name="date_done" position="after">
                <field
                    name="date_backdating"
                    attrs="{
                        'invisible': [
                            ('date_backdating', '=', False),
                        ],
                    }"
                />
            </field>
        </field>
    </record>
</odoo>
