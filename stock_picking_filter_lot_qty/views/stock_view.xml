<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_picking_type_form">
        <field name="name">Operation Types</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_existing_lots']" position="after">
                <field name="use_available_lots"/>
                <field name="use_location_lots"/>
            </xpath>
        </field>
    </record>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_line_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="available_lot_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//field[@name='move_line_ids_without_package']/tree/field[@name='lot_id']" position="attributes">
                <attribute name="domain">[('product_id','=', product_id), ('id', 'in', available_lot_ids)]</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_line_operation_tree" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="available_lot_ids" widget="many2many_tags"/>
            </field>
            <field name="lot_id" position="attributes">
                <attribute name="domain">[('product_id','=', parent.product_id), ('id', 'in', available_lot_ids)]</attribute>
            </field>
        </field>
    </record>

</odoo>
