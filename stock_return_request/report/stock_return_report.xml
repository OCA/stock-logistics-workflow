<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="stock_move_lines_to_return">
        <table class="table table-condensed mt4 mb0">
            <t t-set="has_serial_number" t-value="move_lines.mapped('lot_id')" groups="stock.group_production_lot"/>
            <thead>
                <tr>
                    <th name="th_product">
                        <strong>Product</strong>
                    </th>
                    <th name="th_lot" t-if="has_serial_number">
                        Lot/Serial Number
                    </th>
                    <th name="th_qty" class="text-center">
                        <strong>Quantity</strong>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr t-foreach="move_lines" t-as="move_line">
                    <td name="td_product">
                        <span t-field="move_line.product_id"/>
                        <t t-if="request_type == 'internal'">
                            <span t-field="move_line.product_id.sudo().description"/>
                        </t>
                        <t t-if="request_type == 'supplier'">
                            <span t-field="move_line.product_id.sudo().description_purchase"/>
                        </t>
                        <t t-if="request_type == 'customer'">
                            <span t-field="move_line.product_id.sudo().description_sale"/>
                        </t>
                    </td>
                    <t t-if="has_serial_number">
                        <td name="td_lot">
                            <table width="100%">
                                <tr>
                                    <td>
                                        <span t-field="move_line.lot_id"/>
                                        <t t-if="not move_line.lot_id">
                                            <span t-field="move_line.lot_name"/>
                                        </t>
                                    </td>
                                    <td name="lot_qty">
                                        <t t-if="move_line.product_qty">
                                            <span t-field="move_line.product_qty"/>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </t>
                    <td name="td_qty" class="text-center">
                        <span t-field="move_line.qty_done"/>
                        <span t-field="move_line.product_uom_id"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>

    <template id="report_stock_return_request_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-xs-5 col-xs-offset-1">
                            <div t-if="request.return_type == 'supplier' and request.partner_id">
                                <span><strong>Supplier Address:</strong></span>
                            </div>
                            <div t-if="request.return_type == 'customer' and request.partner_id">
                                <span><strong>Customer Address:</strong></span>
                            </div>
                            <div t-if="request.partner_id" name="partner_header">
                                <div t-field="request.partner_id"
                                    t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                <p t-if="request.sudo().partner_id.vat"><t t-esc="res_company.country_id.vat_label or 'TIN'"/>: <span t-field="request.sudo().partner_id.vat"/></p>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <h1 t-field="request.name" class="mt0 pull-left"/>
                    <div class="clearfix"/>
                    <br/>
                    <h4>[<t t-esc="request.return_from_location.name"/> &#8594; <t t-esc="request.return_to_location.name"/>]</h4>
                    <t t-call="stock_return_request.stock_move_lines_to_return" name="move_lines">
                        <t t-set="move_lines" t-value="request.returned_picking_ids.mapped('move_line_ids')"/>
                        <t t-set="request_type" t-value="request.return_type"/>
                    </t>
                    <br/>
                    <p t-esc="request.note"/>
                </div>
            </t>
         </t>
    </template>

    <template id="report_stock_return_request">
        <t t-foreach="docs" t-as="request">
            <t t-call="stock_return_request.report_stock_return_request_document"/>
        </t>
    </template>

    <report
        string="Stock Return Request Report"
        id="action_report_stock_return_request"
        model="stock.return.request"
        report_type="qweb-pdf"
        name="stock_return_request.report_stock_return_request"
        file="stock_return_request.report_stock_return_request"
        menu="False"
    />

</odoo>
