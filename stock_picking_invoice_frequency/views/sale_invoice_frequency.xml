<odoo>
    <record id="sale_invoice_frequency_view_form" model="ir.ui.view">
        <field name="name">invoice.frequency.automatic.picking.invoicing.form</field>
        <field name="model">sale.invoice.frequency</field>
        <field
            name="inherit_id"
            ref="sale_invoice_frequency.sale_invoice_frequency_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <group>

                    <field
                        name="automatic_picking_invoicing"
                        widget="boolean_toggle"
                        groups="account.group_account_invoice"
                    />
                </group>
            </xpath>
        </field>
    </record>

    <record id="sale_invoice_frequency_view_tree" model="ir.ui.view">
        <field name="name">invoice.frequency.automatic.picking.invoicing.tree</field>
        <field name="model">sale.invoice.frequency</field>
        <field
            name="inherit_id"
            ref="sale_invoice_frequency.sale_invoice_frequency_view_tree"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field
                    name="automatic_picking_invoicing"
                    widget="boolean_toggle"
                    groups="account.group_account_invoice"
                />
            </xpath>
        </field>
    </record>
</odoo>
