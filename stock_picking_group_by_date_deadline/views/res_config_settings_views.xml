<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">Stock settings: rounding time threshold hours</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='operations_setting_container']" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="deadline_date_rounding_threshold_container"
                >
                    <div class="o_setting_right_pane">
                        <label for="deadline_date_rounding_threshold" />
                        <div class="text-muted">
                            Number of hours used to round down deadline date time on stock move.
                            While avoiding to mixed move or picking withd different deadline
                            this settings gives a chance to merge moves or picking with the same deadline.
                            (ie: if set to 6 hours and deadline is 17:22:35 then deadline will be force to 12:00:00).
                            If not set, the default is 24 hours to force once a day.
                        </div>
                        <field name="deadline_date_rounding_threshold" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
