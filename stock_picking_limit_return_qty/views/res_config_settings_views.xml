<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='operations_setting_container']" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="stock_picking_return_limit_management"
                >
                    <div class="o_setting_left_pane">
                        <field name="stock_picking_limit_return_qty" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="stock_picking_limit_return_qty" />
                        <div class="text-muted">
                            This setting allows you to enforce a limit on the return quantity for stock pickings, preventing the return of more items than were in the original picking.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
