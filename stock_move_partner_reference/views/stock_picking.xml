<odoo>
    <record model="ir.ui.view" id="stock_picking_form_view">
        <field name="name">stock.picking.form (in stock_move_partner_reference)</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <button name="button_scrap" position="after">
                <button name="%(stock_picking_fill_partner_reference_act_window)d" type="action"  string="Fill In Partner References" groups="stock_move_partner_reference.group_stock_use_partner_move_reference"/>
            </button>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_reference" groups="stock_move_partner_reference.group_stock_use_partner_move_reference"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_picking_search_view">
        <field name="name">stock.picking.search (in stock_move_partner_reference)</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
             <field name="partner_id" position="after">
                 <field name="partner_reference" groups="stock_move_partner_reference.group_stock_use_partner_move_reference"/>
             </field>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_picking_tree_view">
        <field name="name">stock.picking.tree (in stock_move_partner_reference)</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_reference" groups="stock_move_partner_reference.group_stock_use_partner_move_reference"/>
            </field>
        </field>
    </record>
</odoo>
