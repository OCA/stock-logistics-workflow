<odoo>

    <record model="ir.ui.view" id="stock_return_picking_form_view">
        <field
            name="name"
        >stock.return.picking.form (in stock_restocking_fee_invoicing)</field>
        <field name="model">stock.return.picking</field>
        <field name="inherit_id" ref="stock.view_stock_return_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_return_moves']" position="after">
                <field name="is_customer_return" invisible="1" />
                <group invisible="not is_customer_return">
                    <field name="charge_restocking_fee" />
                </group>
            </xpath>
            <xpath
                expr="//field[@name='product_return_moves']/tree/field[@name='quantity']"
                position="after"
            >
                <field name="is_customer_return" invisible="1" />
                <field
                    name="charge_restocking_fee"
                    invisible="not is_customer_return"
                />
            </xpath>
        </field>
    </record>

</odoo>
