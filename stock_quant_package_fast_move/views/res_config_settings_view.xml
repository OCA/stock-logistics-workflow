<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record
        id="stock_quant_package_fast_move_res_config_settings_view_form"
        model="ir.ui.view"
    >
        <field
            name="name"
        >stock.quant.package.fast.move.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='operations_setting_container']" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    attrs="{'invisible': [('group_stock_tracking_lot', '=', False)]}"
                >
                    <div class="o_setting_right_pane">
                        <label for="package_move_picking_type_id" />
                        <span
                            class="fa fa-lg fa-building-o"
                            title="Values set here are company-specific."
                            groups="base.group_multi_company"
                        />
                        <div class="text-muted">
                            Only operations where the "Move Entire Packages" checkbox is enabled can be selected.
                        </div>
                        <div class="content-group">
                            <field name="package_move_picking_type_id" />
                        </div>
                    </div>
                    <br />
                    <div
                        attrs="{'invisible': [('module_stock_picking_batch','=',False)]}"
                    >
                        <div class="o_setting_left_pane">
                            <field name="use_batch_transfers" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="use_batch_transfers" />
                            <span
                                class="fa fa-lg fa-building-o"
                                title="Values set here are company-specific."
                                groups="base.group_multi_company"
                            />
                            <div class="text-muted">
                                When moving packages, the "Use Batch Transfers" setting automatically creates a batch with separate pickings for each package.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
