<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="shipping_expedition_view_delivery_carrier_form" model="ir.ui.view">
        <field name="name">shipping_expedition_view_delivery_carrier_form</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//h1" position="after">
                <group>
                    <field name="carrier_type"/>
                </group>
            </xpath>
        </field>
    </record>
    <record id="shipping_expedition_view_delivery_carrier_tree" model="ir.ui.view">
        <field name="name">shipping_expedition_view_delivery_carrier_tree.tree</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="carrier_type"/>
            </field>
        </field>
    </record>
</odoo>
