<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form (in stock_picking_backorder_reason)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="reception_report" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="backorder_reason">
                    <div class="o_setting_right_pane">
                        <label for="partner_sale_backorder_default_strategy" />
                        <div class="text-muted">
                            Partner default backorder strategy for sale flow (with reason).
                        </div>
                        <div class="content_group">
                            <field name="partner_sale_backorder_default_strategy" />
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="partner_purchase_backorder_default_strategy" />
                        <div class="text-muted">
                            Partner default backorder strategy for purchase flow (with reason).
                        </div>
                        <div class="content_group">
                            <field name="partner_purchase_backorder_default_strategy" />
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
