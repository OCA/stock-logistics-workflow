<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record model="ir.ui.view" id="product_custom_product_equivalences">
    <field name="name">product.normal.form.custom.inherit</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_normal_form_view"/>
    <field name="arch" type="xml">
      <notebook position="inside">
        <page string="Equivalences">
          <group string="Equivalent Product">
            <field name="equivalent_id"/>
          </group>
          <group string="Compatible Products">
            <field name="compatibility_ids" />
          </group>
        </page>
      </notebook>
    </field>
  </record>
</odoo>
